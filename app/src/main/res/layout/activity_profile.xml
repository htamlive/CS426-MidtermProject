<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clProfile"
        tools:context=".ProfileActivity">

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnProfileDetailBack"
            android:background="@drawable/left_arrow"
            android:foreground="@drawable/ripple_effect"

            android:layout_marginEnd="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/cello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:id="@+id/textView5"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="20dp"
            android:layout_marginTop="16dp">

        <LinearLayout
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/profile_user_icon"
                    android:layout_weight="3"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <TextView
                        android:text="Full name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                <EditText
                        android:text="Anderson"
                        android:textColor="@color/cello"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:hint="Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfileFullName"/>
            </LinearLayout>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="15dp"
                    android:foreground="@drawable/ripple_effect"

                    android:background="@drawable/profile_edit_button_icon"
                    android:id="@+id/btnProfileFullNameEdit"
                    android:layout_weight="3"/>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@android:color/darker_gray"/>


        <LinearLayout
                android:paddingTop="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/profile_phone_icon"
                    android:layout_weight="3"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <TextView
                        android:text="Phone number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                <EditText
                        android:text="+60134589525"
                        android:inputType="phone"
                        android:textColor="@color/cello"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:hint="Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfilePhoneNumber"/>
            </LinearLayout>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/profile_edit_button_icon"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btnProfilePhoneNumberEdit"
                    android:foreground="@drawable/ripple_effect"

                    android:layout_weight="3"
                    />

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@android:color/darker_gray"/>


        <LinearLayout
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/profile_email_icon"
                    android:layout_weight="3"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <TextView
                        android:text="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                />

                <EditText
                        android:text="Anderson@email.com"
                        android:textColor="@color/cello"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:hint="Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvProfileEmail"
                        />
            </LinearLayout>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/profile_edit_button_icon"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btnProfileEmailEdit"
                    android:layout_weight="3"
                    android:foreground="@drawable/ripple_effect"

                    />

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="@android:color/darker_gray"/>


        <LinearLayout
                android:paddingTop="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/profile_address_icon"
                    android:layout_weight="3"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <TextView
                        android:text="Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"/>

                <EditText
                        android:text="3 Addersion Court Chino Hills, HO56824, United State"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/cello"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etProfileAddress"/>
            </LinearLayout>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/profile_edit_button_icon"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btnProfileAddressEdit"
                    android:layout_weight="3"
                    android:foreground="@drawable/ripple_effect"

                    />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>