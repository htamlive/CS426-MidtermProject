<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragment.WaitingFragment">

    <TextView
            android:text="Need a Coffee ?"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/cello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWaitingTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/myProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/ivWaitingIcon"
            android:layout_marginBottom="32dp"/>

    <ImageView

            android:backgroundTint="@color/cello"
            android:background="@drawable/coffee_bean"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivWaitingIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvWaitingTitle"
            app:layout_constraintVertical_chainStyle="packed"
            />

    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/myProgressBar"
            style="@style/SpinKitView.FoldingCube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/water_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/tvWaitingTitle"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="please wait ..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myProgressBar"/>

</androidx.constraintlayout.widget.ConstraintLayout>